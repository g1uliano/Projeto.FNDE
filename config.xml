<?xml version='1.0' encoding='utf-8'?>
<widget id="com.catraia.bolsafnde" version="1.1.1" android-versionCode="101011" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bolsa FNDE</name>
    <description>
        Uma aplicação para consulta as Bolsas FNDE.
    </description>
    <author email="giulianocf@gmail.com" href="http://reformasimples.com">
        Giuliano Cardoso
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
     <platform name="android">
              <preference name="SplashScreenDelay" value="10000" />
              <preference name="android-targetSdkVersion" value="24" />
              <preference name="android-minSdkVersion" value="14" />
              <preference name="LoadUrlTimeoutValue" value="70000"/>
              <preference name="android-manifest/application/activity/@android:theme" value="@style/MyTheme" />
              <icon src="res/mipmap-mdpi/ic_launcher.png" density="mdpi" />
              <icon src="res/mipmap-hdpi/ic_launcher.png" density="mdpi" />
              <icon src="res/mipmap-hdpi/ic_launcher.png" density="hdpi" />
              <icon src="res/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
              <icon src="res/mipmap-xxhdpi/ic_launcher.png" density="xxhdpi" />
              <icon src="res/mipmap-xxxhdpi/ic_launcher.png" density="xxxhdpi" />
              
              <splash src="res/splashscreen/drawable-land-hdpi.png" density="land-hdpi"/>
              <splash src="res/splashscreen/drawable-land-ldpi.png" density="land-ldpi"/>
              <splash src="res/splashscreen/drawable-land-mdpi.png" density="land-mdpi"/>
              <splash src="res/splashscreen/drawable-land-xhdpi.png" density="land-xhdpi"/>

              <splash src="res/splashscreen/hdpi_vertical.png" density="port-hdpi"/>
              <splash src="res/splashscreen/ldpi_vertical.png" density="port-ldpi"/>
              <splash src="res/splashscreen/mdpi_vertical.png" density="port-mdpi"/>
              <splash src="res/splashscreen/xhdpi_vertical.png" density="port-xhdpi"/>
    </platform>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
